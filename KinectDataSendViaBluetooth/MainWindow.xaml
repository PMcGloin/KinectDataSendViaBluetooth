<Window x:Class="KinectDataSendViaBluetooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectDataSendViaBluetooth"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="InfoTextBox" HorizontalAlignment="Left" Height="752" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" VerticalScrollBarVisibility="Visible"/>
        <ListBox x:Name="DevicesListBox" HorizontalAlignment="Left" Height="752" Margin="9.5,10,0,0" VerticalAlignment="Top" Width="83" Grid.Column="2" MouseDoubleClick="DevicesListBox_MouseDoubleClick"/>
        <TextBox x:Name="KinectDataTextBox" HorizontalAlignment="Left" Height="752" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Margin="10,10,0,0" Grid.Column="1" VerticalScrollBarVisibility="Visible"/>

    </Grid>
</Window>
